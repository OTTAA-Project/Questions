<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ButtonsContainer"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="normal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutButtons"
        >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintVertical_weight="5">

        <com.stonefacesoft.questions.utils.Picto
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:onClick="onClick"
            android:id="@+id/picto1"
            custom:Texto="Hola"
            custom:Color="4"/>


        <com.stonefacesoft.questions.utils.Picto
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/picto2"
            app:Texto="Hola"
            app:Color="2"/>

        <com.stonefacesoft.questions.utils.Picto
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/picto3"
            app:Texto="Hola"
            app:Color="2"/>

        <com.stonefacesoft.questions.utils.Picto
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/picto4"
            app:Texto="Hola"
            app:Color="2"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
        <Button
            android:id="@+id/btnBarrido"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/transparent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/text_googleapi"
        app:layout_constraintTop_toBottomOf="@+id/ButtonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/toca_aca_para_hacer_una_pregunta"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <com.stonefacesoft.questions.utils.MovableFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutButtons"
        app:layout_constraintTop_toBottomOf="@id/ButtonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_googleapi"
        android:background="@drawable/movable_button_rigth"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/place_holder"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/ic_reorder_black_24dp"
            app:tint="@color/purple_700"
            android:contentDescription=" "
            android:layout_gravity="center"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_more"
            android:visibility="gone"
            android:backgroundTint="@color/YellowGreen"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/ic_photo_library_black_24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_mic"
            android:backgroundTint="@color/teal_200"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="6dp"
            app:fabSize="normal"
            android:src="@drawable/ic_mic_black_24dp"/>


    </com.stonefacesoft.questions.utils.MovableFloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>